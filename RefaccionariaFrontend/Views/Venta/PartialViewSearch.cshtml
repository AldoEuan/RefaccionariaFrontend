@model IEnumerable<RefaccionariaFrontend.Models.ProductoModel>



    <div class="modal bg-black   w-100 " tabindex="-5">
        <div class="modal-dialog  ">
            <div class="modal-content  ">
                <div class="modal-header">
                    <h5 class="modal-title">Lista de productos</h5>
                    <button type="button" class="close btn btn-danger" data-bs-dismiss="modal" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="modal-body opacity-100">
                    <ul class="list-group">
                        @foreach (var item in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto w-100">
                                <div class="fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</div>
                                <div class="d-flex gap-5 justify-content-between w-100">
                                    Existencia: @Html.DisplayFor(modelItem => item.Existencia)
                                    <a href="@Url.Action("AddToCart", "Venta", new { id_producto = item.Id })" class="btn btn-primary bi bi-plus btn-sm">Agregar</a>
                                </div>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
    </div>
